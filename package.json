{
  "name": "groovescribe",
  "version": "2.0.0",
  "description": "Groove Scribe allows drummers to easily create grooves, listen, share, print sheet music, and more.",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8080 -c-1",
    "dev": "http-server -p 8080 -c-1 --cors",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss css/groove_writer_orange.css css/groove_display_orange.css -o dist/styles.min.css --use autoprefixer --use cssnano",
    "build:js": "webpack --mode production",
    "lint": "eslint \"js/**/*.js\"",
    "lint:fix": "eslint \"js/**/*.js\" --fix",
    "test": "jest || echo 'No tests configured' && exit 0",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "drums",
    "music",
    "notation",
    "groove",
    "rhythm",
    "midi",
    "abc-notation",
    "sheet-music"
  ],
  "author": "Lou Montulli, Mike Johnston",
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/GrooveScribe.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/GrooveScribe/issues"
  },
  "homepage": "https://github.com/yourusername/GrooveScribe#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jsmidgen": "^0.1.5",
    "midi-player-js": "^2.0.7",
    "pablo": "^0.4.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
